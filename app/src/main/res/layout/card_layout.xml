<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/card_view"
        android:elevation="5dp">

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            card_view:cardCornerRadius="4dp"
            android:id="@+id/cardView">
           -- android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:id="@+id/cardRelative"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:id="@+id/cardImage"
                    android:src="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                   />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativeLayout"
                    android:background="#96ffffff"
                    android:layout_alignBottom="@+id/cardImage"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Titulo"
                        android:id="@+id/cardTitle"
                        android:padding="8dp"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="08/08/2016"
                        android:id="@+id/cardResume"
                        android:layout_below="@+id/cardTitle"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:padding="8dp"
                        android:textSize="12sp" />
                    <ToggleButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/star_btn"
                        android:textOff=""
                        android:textOn=""
                        android:background="@drawable/star_toggle"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/expand_button"
                        android:layout_toStartOf="@+id/expand_button" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/expand_button"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:src="@mipmap/ic_more"
                        android:background="#00ffffff"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Local"
                        android:id="@+id/textView"
                        android:textSize="12sp"
                        android:padding="8dp"
                        android:layout_toEndOf="@+id/cardResume"
                        android:layout_below="@+id/cardTitle"
                        android:layout_toRightOf="@+id/cardResume" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_expand"
                    android:visibility="gone"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Aqui aparecerao os detalhes sobre o evento blablablabalbal dabd"
                        android:id="@+id/cardDetails"
                        android:padding="8dp"
                        android:textSize="14sp"
                        android:background="#96ffffff"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>